#ifndef FONT_H
#define FONT_H

#define FONT_HEIGHT 16
#define FONT_WIDTH  12

const int FONT[][FONT_WIDTH * FONT_HEIGHT / 16] = {
    <%= glyphes %>
};

int FONT_PIXEL(char c, int x, int y)
{
  int i = FONT_WIDTH * y + x;
  return ((FONT[c - '.'][i / 16] & (1 << (i % 16))) ? 1 : 0);
}

#endif /* !FONT_H */
